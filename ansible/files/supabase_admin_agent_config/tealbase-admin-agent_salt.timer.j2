[Unit]
Description=Run tealbase tealbase-admin-agent salt on a schedule
Requires=tealbase-admin-agent_salt.service

[Timer]
OnCalendar=*:0/10
# Random delay up to {{ tealbase_admin_agent_splay }} seconds splay
RandomizedDelaySec={{ tealbase_admin_agent_splay }}
AccuracySec=1s
Persistent=true

[Install]
WantedBy=timers.target
